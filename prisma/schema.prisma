generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum BooksStatus {
  COMPLETED
  IN_PROGRESS
  DROPPED
}


//CREATE table Books
model books {
  id           Int         @id @default(autoincrement())
  title        String
  description  String?     @db.Text
  status       BooksStatus @default(IN_PROGRESS)
  completed_at String?
  updated_at   DateTime    @updatedAt
  language     String
}

model users {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String   @db.VarChar(15)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
